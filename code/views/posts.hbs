{{> header title=this.title }}

<body>
  
  {{> nav active }}
  
  <div class="container">
    
    <div class="row">
      <div class="col-12">
        <h4 class="text-center serif mb-4 pb-2 mt-0 pt-5">{{ this.title }}</h4>
        <hr>
      </div>
    </div>
    
    <div class="row">
      
      {{> flash }}
      
      <div class="col-lg-10 offset-lg-1">
      
        {{#if toc }}
        <ul class="list-unstyled pb-0 pt-4">
          {{#each posts}}
            <li class="pt-1"><a href="#anchor{{this.id}}">{{ this.title }}</a></li>
          {{/each}}
        </ul>
        {{/if}}
        
        {{#each posts}}
        <div class="pb-3 pt-4" id="anchor{{this.id}}">
          <h4 class="mt-3 pb-0 mb-0">{{ this.title }}</h4>
          <div class="text-muted mb-2"><small>{{#if showDate}} {{ this.createDateBlog }} {{/if}} {{#if showAuthor}}By {{ this.author }} {{/if}}</small></div>
          {{{ this.html }}}
        </div>
        {{/each}}
        
      </div>
      
      {{#if footer }}
  
      {{> bottom }}

      {{/if}}
      
    </div>
    
  </div>
  
  {{> footer}}

  {{> bootstrapjs}}
  
</body>