<script>
var cb = new ClipboardJS('.btn');

cb.on('success', function(e) {
    e.clearSelection();
    $('.popover').show();
    setTimeout(
      function () {
        $('.popover').hide();
      },
      3000
    );
});

$('[data-toggle="popover"]').popover({
    placement: 'bottom'
});
</script>